<%= render partial: 'layouts/container_top', locals: {h2: 'Settings'} %>

<div>
  <div>
    <form method="POST" action="/users/me">
     <input type="hidden" name="_method" value="PUT"/>

     <label for="email">Email</label>
     <input type="text" name="email" value="<%=@user.email %>" style="width: 350px" disabled="true"/>
     <label for="email">First Name</label>
     <input type="text" name="fname" value="<%=@user.fname %>"/>
     <label for="email">Last Name</label>
     <input type="text" name="lname" value="<%=@user.lname %>"/>
     <br/>
     <br/>
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
       <input type="submit" value="Update" style="font-size: 24px;"/>
    </form>
  </div>
</div>
<%= render partial: 'layouts/container_bottom' %>
